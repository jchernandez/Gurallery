<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <com.rojoxpress.gurallery.components.TouchImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:src="@drawable/image_placeholder"
        android:id="@+id/image"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:id="@+id/info_container"
        android:background="#646a6c5f"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:text=""
            android:maxLines="4"
            android:layout_gravity="center_vertical"
            android:autoLink="all"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

        <TextView
            android:id="@+id/score"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_score"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/up_votes"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_up"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/down_votes"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_down"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>